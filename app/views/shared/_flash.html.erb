<% if notice %>
  <div class="notification notice">
    <div class="circle">
      <%= image_tag 'check.svg' %>
    </div>
    <%= notice %>
  </div>
<% end %>
<% if alert %>
  <div class="notification alert">
    <div class="circle">
      <%= image_tag 'times.svg' %>
    </div>
    <%= alert %>
  </div>
<% end %>